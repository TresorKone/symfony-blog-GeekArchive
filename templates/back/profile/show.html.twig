{% extends 'Base_BackOffice.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h1>Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>Fullname</th>
                <td>{{ profile.fullname }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ profile.pseudo }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ profile.bio }}</td>
            </tr>
            <tr>
                <th>ProfilePicture</th>
                <td>{{ profile.profilePicture }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ profile.birthDate ? profile.birthDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ profile.updatedAt ? profile.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ profile.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_profile_index') }}">back to list</a>

    <a href="{{ path('app_back_profile_edit', {'id': profile.id}) }}">edit</a>

    {{ include('back/profile/_delete_form.html.twig') }}
{% endblock %}
