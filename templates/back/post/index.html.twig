{% extends 'Base_BackOffice.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>


    <div class="mt-5">
        <a href="{{ path('app_back_post_new') }}">Create new</a>
    </div>

    <div class="mt-5 relative shadow-md sm:rounded-lg">
        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="py-3 px-6">
                    Id
                </th>
                <th scope="col" class="py-3 px-6">
                    Title
                </th>
                <th scope="col" class="py-3 px-6">
                    Description
                </th>
                <th scope="col" class="py-3 px-6">
                    Created_at
                </th>
                <th scope="col" class="py-3 px-6">
                    Updated_at
                </th>
                <th scope="col" class="py-3 px-6">
                    Show
                </th>
                <th scope="col" class="py-3 px-6">
                    Edit
                </th>

            </tr>
            </thead>
            <tbody>
            {% for post in posts %}
                <tr class="bg-white border-b dark:bg-gray-900 dark:border-gray-700">
                    <td class="py-4 px-6">
                        {{ post.id }}
                    </td>
                    <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                        {{ post.title }}
                    </th>
                    <td class="py-4 px-6">
                        {{ post.description }}
                    </td>

                    <td class="py-4 px-6">
                        {{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}
                    </td>
                    <td class="py-4 px-6">
                        {{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}
                    </td>
                    <td class="py-4 px-6">
                        <a href="{{ path('app_back_post_show', {'id': post.id}) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Show</a>
                    </td>
                    <td class="py-4 px-6">
                        <a href="{{ path('app_back_post_edit', {'id': post.id}) }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}
