{% extends 'Base_BackOffice.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1 class="">Post</h1>

    <table class="table mt-5">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ post.picture }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_back_post_index') }}">back to list</a>

    <a href="{{ path('app_back_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('back/post/_delete_form.html.twig') }}
{% endblock %}
